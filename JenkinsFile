pipeline{
    agent any
    environment {
		DOCKERHUB_CREDENTIALS=credentials('dockerhub')
	}

    stages{


        stage('Cloning from GitHub') {
                steps {
                    git branch: 'mohamedchokri', url: 'https://github.com/achraftawes/TP-Achat-devops.git'
                }
                
            }
      
      stage('Clean'){
            steps {
                sh 'mvn clean '
            }
            
        }
        stage('Compile'){
            steps {
                sh 'mvn compile  -DskipTests'
            }
            
        }
        
        
        /* stage('UNIT test'){
            steps{
                sh 'mvn test'
            }
        }*/

         stage('SonarQube Analysis'){
                steps {
                    sh """mvn sonar:sonar -DskipTests \
                            -Dsonar.language=java \
                          
                            
                    """
                }
                
            }
        
        
        
        
        stage('Nexus'){
            steps{
                sh 'mvn deploy -DskipTests'
            }
        }
        stage('Push') {

			steps {
				sh 'docker push chokrimohamed/achatapp_testt:latest'
			}
		} 
        stage('Start container') {
             steps {
                sh  'docker-compose -v'
                sh 'docker-compose up -d '
                sh 'docker-compose ps'
      }
        }
        
        stage('Build') {

			steps {
				sh 'docker build -t chokrimohamed/achatapp_testt:latest .'
			}
		}

		 

		stage('Login') {

			steps {
				sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password 54783781M'
			}
		}

		
	
   
    }
        
        
      

    }
}